{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2022", "dom", "dom.iterable"],
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "module": "ES2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
